{colors}: ''
  #window {
    border-radius: 4px;
    background-color: ${colors.base00};
  }

  #input {
    padding: 4px;
    border-radius: 4px 4px 0 0;
    font-size: 16px;
    background-color: ${colors.base01};
    border: none;
    color: #ecf2f8;
  }

  #input:focus {
    box-shadow: none;
  }

  #scroll {
    border-radius: 4px;
    background-color: ${colors.base01};
    margin: 0 12px 12px;
  }

  #inner-box {
    border-radius: 4px;
    padding: 12px;
  }

  #entry {
    padding: 8px;
  }

  #entry:selected {
    border-radius: 8px;
    background-color: ${colors.base00};
  }

  #entry image {
    margin-right: 8px;
  }
''
